
@model Customer 

@{

    Layout = "~/Views/shared/_Login&RegisterLayout.cshtml";
}




<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form asp-action="Register" method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Fname" type="text"   placeholder="First Name" />
                    </div>
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Lname" type="text" id="Lnam" placeholder="Last Name"  />
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="text" name="userName" id="UserNam" placeholder="User Name" />
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" name="Password" id="pass" placeholder="password" />
                    </div>
                 
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="https://img.freepik.com/free-vector/placeholder-concept-illustration_114360-4983.jpg?t=st=1714226289~exp=1714229889~hmac=2c17a444cc62d65a3310fe0276306a784d6b6f75a39aadee3eb3f386fcd5f353&w=740" alt="sing up image"></figure>
                <a asp-action="LogIn" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>